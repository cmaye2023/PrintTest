<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name = "AppTheme"
        parent = "Theme.MaterialComponents.Light.DarkActionBar">
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <!--<item name = "itemBackground">@color/customerListMenuBackground</item>-->
        <item name = "android:windowActivityTransitions">true</item>
    </style>


    <!-- AppBarOverLay -->
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <!-- Popup OverLay -->
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <!-- NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


   <!-- Bottom Navigation View Activate -->
    <style name="BottomNavigationView.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>
</resources>